<Window x:Class="ColorPickerProject.LineThicknessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPickerProject"
        mc:Ignorable="d"
        Title="LineThicknessWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="FontSize:"/>
            <Slider x:Name="slider_Line_thickness" Minimum="1" Maximum="100" TickFrequency="2" TickPlacement="BottomRight"/>
        </StackPanel>
        <StackPanel>
            <Button Content="Select" Click="Select_Click" Width="40" Height="20" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="ColorPickerProject.SelectBackgroundWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ColorPickerProject"
        mc:Ignorable="d"
        Title="SelectBackgroundWindow2" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="Цвет заливки:" VerticalAlignment="Center"/>

            <xctk:ColorPicker  Name="colorPicker13" Margin="10" SelectedColorChanged="colorPicker13_SelectedColorChanged" Height="30"></xctk:ColorPicker>
           
            <Button Content="Select" Click="Button_Click13" Width="50" Height="30" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
